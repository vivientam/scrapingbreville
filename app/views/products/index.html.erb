<h1>Breville Product Table</h1>

<div class="table-responsive">
  <table class="table table-striped table-text">
    <thead>
      <tr>
        <th>Code id</th>
        <th>Product Image</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code_id %></td>
          <td><%= image_tag product.product_image  %></td>
          <td><%= product.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>